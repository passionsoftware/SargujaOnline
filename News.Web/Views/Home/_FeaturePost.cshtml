@model List<News.Datamodel.NewsUserModel>

<section class="bg0">
    <div class="container">
        <div class="row m-rl--1">
            <div class="col-md-6 p-rl-1 p-b-2">
                <div class="bg-img1 size-a-3 how1 pos-relative" style="background-image: url(@Model.Where(m => m.NewsType == "FrontNews").FirstOrDefault().NewsImage);">
                    <a  href="@Url.Action("details", new { newsId = Model.Where(m => m.NewsType == "FrontNews").FirstOrDefault().NewsId})" class="dis-block how1-child1 trans-03"></a>

                    <div class="flex-col-e-s s-full p-rl-25 p-tb-20" title="Sarguja News">
                        <a href="@Url.Action("Category", new { categoryname = Model.Where(m => m.NewsType == "FrontNews").FirstOrDefault().Catergory})" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2" >
                        @*<a href="#" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">*@
                            @Model.Where(m => m.NewsType == "FrontNews").FirstOrDefault().Catergory
                        </a>

                        <h3 class="how1-child2 m-t-14 m-b-10">
                            <a href="@Url.Action("details", new { newsId = Model.Where(m => m.NewsType == "FrontNews").FirstOrDefault().NewsId })" class="how-txt1 size-a-6 f1-l-1 cl0 hov-cl10 trans-03">
                                @Model.Where(m => m.NewsType == "FrontNews").FirstOrDefault().NewsSubject
                            </a>
                        </h3>

                        <span class="how1-child2">
                            <span class="f1-s-4 cl11">
                                @Model.Where(m => m.NewsType == "FrontNews").FirstOrDefault().CreatedBy
                            </span>

                            <span class="f1-s-3 cl11 m-rl-3">
                                -
                            </span>

                            <span class="f1-s-3 cl11">
                                @String.Format("{0:dd MMM}",Model.Where(m => m.NewsType == "FrontNews").FirstOrDefault().CreatedDate)
                          
                            </span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-md-6 p-rl-1">
                <div class="row m-rl--1">
                    <div class="col-12 p-rl-1 p-b-2">
                        <div class="bg-img1 size-a-4 how1 pos-relative" style="background-image: url(@Model.Where(m => m.NewsType == "FrontNews").ToArray()[1].NewsImage);">
                            <a href="@Url.Action("details", new { newsId = Model.Where(m => m.NewsType == "FrontNews").ToArray()[1].NewsId})" class="dis-block how1-child1 trans-03"></a>

                            <div class="flex-col-e-s s-full p-rl-25 p-tb-24">
                                <a href="@Url.Action("Category", new { categoryname = Model.Where(m => m.NewsType == "FrontNews").ToArray()[1].Catergory })" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
                                        @if (Model.Where(m => m.NewsType == "FrontNews") != null && Model.Where(m => m.NewsType == "FrontNews").ToArray()[1] != null)
                                        {
                                            @Model.Where(m => m.NewsType == "FrontNews").ToArray()[1].Catergory;
                                        }
                                       
                                    </a>

                                    <h3 class="how1-child2 m-t-14">
                                        <a  href="@Url.Action("details", new { newsId = Model.Where(m => m.NewsType == "FrontNews").ToArray()[1].NewsId })" class="how-txt1 size-a-7 f1-l-2 cl0 hov-cl10 trans-03">
                                            @if (Model.Where(m => m.NewsType == "FrontNews") != null && Model.Where(m => m.NewsType == "FrontNews").ToArray()[1] != null)
                                            {
                                                @Model.Where(m => m.NewsType == "FrontNews").ToArray()[1].NewsSubject;
                                            }
                                        </a>
                                    </h3>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 p-rl-1 p-b-2">
                        <div class="bg-img1 size-a-5 how1 pos-relative" style="background-image: url(@Model.Where(m => m.NewsType == "FrontNews").ToArray()[2].NewsImage);">
                            <a href="@Url.Action("details", new { newsId = Model.Where(m => m.NewsType == "FrontNews").ToArray()[2].NewsId})" class="dis-block how1-child1 trans-03"></a>

                            <div class="flex-col-e-s s-full p-rl-25 p-tb-20">
                                <a href="@Url.Action("Category", new { categoryname = Model.Where(m => m.NewsType == "FrontNews").ToArray()[2].Catergory })" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
                                    @Model.Where(m => m.NewsType == "FrontNews").ToArray()[2].Catergory;
                                </a>

                                <h3 class="how1-child2 m-t-14">
                                    <a href="@Url.Action("details", new { newsId = Model.Where(m => m.NewsType == "FrontNews").ToArray()[2].NewsId})" class="how-txt1 size-h-1 f1-m-1 cl0 hov-cl10 trans-03">
                                        @Model.Where(m => m.NewsType == "FrontNews").ToArray()[2].NewsSubject;
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 p-rl-1 p-b-2">
                        <div class="bg-img1 size-a-5 how1 pos-relative" style="background-image: url(@Model.Where(m => m.NewsType == "FrontNews").ToArray()[3].NewsImage);">
                            <a href="@Url.Action("details", new { newsId = Model.Where(m => m.NewsType == "FrontNews").ToArray()[3].NewsId})" class="dis-block how1-child1 trans-03"></a>

                            <div class="flex-col-e-s s-full p-rl-25 p-tb-20">
                                <a href="@Url.Action("Category", new { categoryname = Model.Where(m => m.NewsType == "FrontNews").ToArray()[3].Catergory })" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
                                    @Model.Where(m => m.NewsType == "FrontNews").ToArray()[3].Catergory;
                                </a>

                                <h3 class="how1-child2 m-t-14">
                                    <a href="@Url.Action("details", new { newsId = Model.Where(m => m.NewsType == "FrontNews").ToArray()[3].NewsId })" class="how-txt1 size-h-1 f1-m-1 cl0 hov-cl10 trans-03">
                                        @Model.Where(m => m.NewsType == "FrontNews").ToArray()[3].NewsSubject;
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>